<script src="https://unpkg.com/jspdf@latest/dist/jspdf.min.js"></script>
<script>
    fetch("http://localhost:8000/admin/reportes/grafica")
        .then((response) => response.json())
        .then((json) => generarGrafica(json));

    function generarGrafica(datos) {
        try {
            console.log(datos);
            //Team chart
            var ctx = document.getElementById("MyChartVentasTotales").getContext('2d');
            if (ctx) {
                var myChart = new Chart(ctx, {
                    type: "line",
                    data: {
                        labels: datos.dia,
                        type: "line",
                        defaultFontFamily: "Poppins",
                        datasets: [
                            {
                                data: datos.reportes,
                                label: "Total ventas",
                                backgroundColor: "transparent",
                                borderColor: "#5e72e4",
                                borderWidth: 4,
                                tension: .4,
                                borderCapStyle: 'rounded',
                                pointBorderColor: "transparent",
                                pointBackgroundColor: "red",
                            },
                        ],
                    },
                    options: {
                        responsive: true,
                        tooltips: {
                            mode: "index",
                            titleFontSize: 12,
                            titleFontColor: "#000",
                            bodyFontColor: "#000",
                            backgroundColor: "#fff",
                            titleFontFamily: "Poppins",
                            bodyFontFamily: "Poppins",
                            cornerRadius: 3,
                            intersect: false,
                        },
                        legend: {
                            display: false,
                            position: "top",
                            labels: {
                                usePointStyle: true,
                                fontFamily: "Poppins",
                            },
                        },
                        scales: {
                            xAxes: [
                                {
                                    display: true,
                                    gridLines: {
                                        display: false,
                                        drawBorder: false,
                                    },
                                    scaleLabel: {
                                        display: true,
                                        labelString: "Días",
                                    },
                                    ticks: {
                                        fontFamily: "Poppins",
                                    },
                                },
                            ],
                            yAxes: [
                                {
                                    display: true,
                                    gridLines: {
                                        display: true,
                                        drawBorder: false,
                                    },
                                    scaleLabel: {
                                        display: true,
                                        labelString: "Venta",

                                    },
                                    ticks: {
                                        fontFamily: "Poppins",
                                    },
                                },
                            ],
                        },
                        title: {
                            display: false,
                        },
                    },
                });
            }
        } catch (error) {
            console.log(error);
        }
    }

    function generarPdf() {
        //Generate PDF
        var newCanvas = document.querySelector('#MyChartVentasTotales');

        //create image from dummy canvas
        var newCanvasImg = newCanvas.toDataURL("image/png", 2.0);

        //creates PDF from img
        var doc = new jsPDF('landscape');
        doc.setFontSize(20);
        doc.text(20, 20, "Reporte de ventas ultimos 30 días");
        doc.addImage(newCanvasImg, 'PNG', 5, 25, 280, 150, 'MyChartVentasTotales', 'NONE');
        doc.save('Repore de Ventas.pdf');
    }
</script>