    <div class="header bg-primary pb-6">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">

                    <div class="media-body  ml-2  d-none d-lg-block ">
                        <a href="#" data-toggle="modal" data-target="#modificarModal"
                            class="btn btn-success float-right"><i class="ni ni-fat-add text-white"></i>Agregar
                            Producto</a>
                        <!-- Modal agregar usuarios-->
                        <div class="modal fade" id="modificarModal" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Agregar Producto</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>

                                    <form action="/admin/productos/agregar" method="post" enctype="multipart/form-data">
                                        <div class="modal-body">
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label for="nombre">Nombre</label>
                                                    <input type="text" class="form-control" name="nombre" id="nombre"
                                                        value="">
                                                </div>

                                                <div class="form-group col-md-6">
                                                    <label for="nombre">Marca</label>
                                                    <input type="text" class="form-control" name="marca" id="marca"
                                                        value="">
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label for="nombre">Precio</label>
                                                    <input type="number" class="form-control" name="precio" id="precio"
                                                        value="">
                                                </div>

                                                <div class="form-group col-md-6">
                                                    <label for="number">Cantidad</label>
                                                    <input type="number" class="form-control" name="cantidad"
                                                        id="cantidad" value="">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="nombre">Descripción</label>
                                                <textarea class="form-control" name="descripcion" id="descripcion"
                                                    value=""></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label for="nombre">Imagen</label>
                                                <input type="file" class="form-control" name="imagen">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputState">Categorías</label>
                                                <select id="id_categorias" name="id_categorias" class="form-control">
                                                    {{#each categorias}}
                                                    <option value="{{id_categorias}}">
                                                        {{categoria}}
                                                    </option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger"
                                                data-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-success">Añadir</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--6">
        <!-- Dark table -->
        <div class="row">
            <div class="col">
                <div class="card shadow text-light" style="background-color: #156F6F;">
                    <div class="card-header bg-transparent border-0">
                        <h3 class="text-white mb-0">Lista de productos</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-light table-flush" id="LukarStoreDataTable">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col" class="sort" data-sort="id">id</th>
                                    <th scope="col" class="sort" data-sort="nombre">Nombre</th>
                                    <th scope="col" class="sort" data-sort="email">Marca</th>
                                    <th scope="col" class="sort" data-sort="rol">Precio</th>
                                    <th scope="col" class="sort" data-sort="rol">estado</th>
                                    <th scope="col" class="sort" data-sort="accion">Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each productos}}
                                <tr>
                                    <th>{{id_productos}} </th>
                                    <td class="budget">{{nombre}}</td>
                                    <td> {{marca}}</td>
                                    <td>{{precio}} </td>
                                    <td>{{estado}}</td>
                                    <td>

                                        <a href="#" data-toggle="modal" data-target="#modificarModal{{id_productos}}"
                                            class="btn btn-success">Modificar</a>

                                        <!--Modal update-->
                                        <div class="modal fade" id="modificarModal{{id_productos}}" tabindex="-1"
                                            role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Editar Productos
                                                        </h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>

                                                    <form action="/admin/productos/editar/{{id_productos}}"
                                                        method="post">
                                                        <div class="modal-body">
                                                            <div class="form-row">
                                                                <div class="form-group col-md-6">
                                                                    <label for="nombre">Nombre</label>
                                                                    <input type="text" class="form-control"
                                                                        name="nombre" id="nombre" value="{{nombre}}">
                                                                </div>

                                                                <div class="form-group col-md-6">
                                                                    <label for="nombre">Marca</label>
                                                                    <input type="text" class="form-control" name="marca"
                                                                        id="marca" value="{{marca}}">
                                                                </div>
                                                            </div>
                                                            <div class="form-row">
                                                                <div class="form-group col-md-6">
                                                                    <label for="nombre">Precio</label>
                                                                    <input type="number" class="form-control"
                                                                        name="precio" id="precio" value="{{precio}}">
                                                                </div>

                                                                <div class="form-group col-md-6">
                                                                    <label for="number">Cantidad</label>
                                                                    <input type="number" class="form-control"
                                                                        name="cantidad" id="cantidad"
                                                                        value="{{cantidad}}">
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="nombre">Descripción</label>
                                                                <textarea class="form-control" name="descripcion"
                                                                    id="descripcion" value="">{{descripcion}}</textarea>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="id_categorias">Categorías</label>
                                                                <select id="id_categorias" name="id_categorias"
                                                                    class="form-control">
                                                                    {{#each ../categorias}}
                                                                    <option value="{{id_categorias}}"
                                                                        {{isSelected ../id_categorias id_categorias}}>
                                                                        {{categoria}}
                                                                    </option>
                                                                    {{/each}}

                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-danger"
                                                                data-dismiss="modal">Cancelar</button>
                                                            <button type="submit"
                                                                class="btn btn-success">Editar</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <a href="#" data-toggle="modal" data-target="#exampleModal{{id_productos}}"
                                            class="btn btn-info">Info</a>
