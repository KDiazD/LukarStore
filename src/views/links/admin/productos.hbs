                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Información de
                                                            usuario</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>

                                                    <form action="#" method="post">
                                                        <div class="modal-body">
                                                            <div class="form-row">
                                                                <div class="form-group col-md-6">
                                                                    <label for="nombre">Nombre</label>
                                                                    <input type="text" readonly class="form-control"
                                                                        name="nombre_usuario" id="nombre"
                                                                        value="{{nombre}}">
                                                                </div>

                                                                <div class="form-group col-md-6">
                                                                    <label for="nombre">Marca</label>
                                                                    <input type="text" readonly class="form-control"
                                                                        name="marca" id="marca" value="{{marca}}">
                                                                </div>
                                                            </div>
                                                            <div class="form-row">
                                                                <div class="form-group col-md-6">
                                                                    <label for="nombre">Precio</label>
                                                                    <input type="number" readonly class="form-control"
                                                                        name="precio" id="precio" value="{{precio}}">
                                                                </div>

                                                                <div class="form-group col-md-6">
                                                                    <label for="number">Cantidad</label>
                                                                    <input type="number" readonly class="form-control"
                                                                        name="cantidad" id="cantidad"
                                                                        value="{{cantidad}}">
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="nombre">Descripción</label>
                                                                <textarea class="form-control" readonly
                                                                    name="descripcion" id="descripcion"
                                                                    value="">{{descripcion}}</textarea>
                                                            </div>
                                                            <div class="form-row">
                                                                <div class="form-group col-md-6">
                                                                    <label for="inputState">Categorías</label>
                                                                    <select id="id_categorias" readonly
                                                                        class="form-control">
                                                                        {{#each ../categorias}}
                                                                        <option value="{{id_categorias}}"
                                                                            {{isSelected ../id_categorias id_categorias}}>
                                                                            {{categoria}}
                                                                        </option>
                                                                        {{/each}}

                                                                    </select>
                                                                </div>
                                                                <div class="form-group col-md-6">
                                                                    <label for="number">Usuario</label>
                                                                    <input type="text" readonly class="form-control"
                                                                        name="cantidad" id="cantidad"
                                                                        value="{{nombre_usuario}}">
                                                                </div>

                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-warning"
                                                                data-dismiss="modal">Aceptar</button>

                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                        <a href="#" data-toggle="modal" data-target="#eliminarModal{{id_productos}}"
                                            class="btn btn-danger">Eliminar</a>
                                        <div class="modal fade -large" id="eliminarModal{{id_productos}}" tabindex="-1"
                                            role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog " role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Eliminar Producto
                                                        </h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>

                                                    <form action="/admin/productos/eliminar/{{id_productos}}"
                                                        method="get">
                                                        <div class="modal-body">
                                                            <div class="form-group">
                                                                <b><label for="nombre">¿Está seguro que desea eliminar
                                                                        éste
                                                                        producto?</label></b>
                                                            </div>
                                                            <div class="form-group">
                                                                <b><label for="nombre">Nombre: </label></b>
                                                                <label for="nombre">{{nombre}}</label><br>
                                                                <b><label for="nombre">Marca: </label></b>
                                                                <label for="email">{{marca}}</label><br>
                                                                <b><label for="rol">Precio: </label></b>
                                                                <label for="rol">{{precio}}</label><br>
                                                                <b><label for="rol">Cantidad: </label></b>
                                                                <label for="rol">{{cantidad}}</label><br>
                                                                <b><label for="rol">Descripción: </label></b>
                                                                <label for="rol">{{descripcion}}</label><br>
                                                                <b><label for="rol">Categoría: </label></b>
                                                                <label for="rol">{{categoria}}</label><br>

                                                            </div>
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-success"
                                                                data-dismiss="modal">Cancelar</button>
                                                            <button type="submit"
                                                                class="btn btn-danger">Eliminar</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    {{/each}}
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>