<!-- Sección Banner-->

<section>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/fotos/banner9.jpg" alt="First">
            </div>
            {{#each ImgBanner}}
            <div class=" carousel-item">
                <img class="d-block w-100" src="/fotos/{{img}}" alt="First">
            </div>
            {{/each}}
        </div>


        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</section>
<!-- Listado de productos -->
<section>
    <div class="container">
        <div class="header_middle">
            <!--Lista de productos-->
            <div class="shop_toolbar_wrapper">
                <div class="shop_toolbar_btn">
                    <button data-role="grid_3" type="button" class="active btn-grid-3" data-toggle="tooltip"
                        title="3"></button>
                </div>
            </div>
            <!--shop toolbar end-->
            <div class="row shop_wrapper">
                {{#each busquedaHeader}}
                <div class="col-lg-4 col-md-4 col-12">
                    <article class="single_product" style="margin-left: auto;">
                        <figure>
                            <div class="product_content grid_content">
                                <a class="primary_img" href="/productos/listado_productos/{{id_productos}}"><img
                                        src="/fotos/{{imagen}}" alt="" width="235" height="235"></a>
                                <div class="label_product">
                                    <span class="label_sale">Sale</span>
                                </div>
                            </div>
                            <div class="product_content grid_content">
                                <div class="price_box">
                                    <span class="current_price">{{precio}}</span>
                                </div>
                                <h3 class="">{{nombre}}</h3>
                            </div>
                            <div class="product_content grid_content">
                                <div class="">
                                    <form method="POST" action="/productos/carro/agregar">
                                        <input type="hidden" name="nombre" value="{{nombre}}">
                                        <input type="hidden" name="precio" value="{{precio}}">
                                        <input type="hidden" name="cantidad" value="1">
                                        <input type="hidden" name="id_productos" value="{{id_productos}}">
                                        <button class="btn btn-success" type="submit">Añadir al carrito</button>
                                    </form>
                                </div>
                                <br>
                                <div class="btn btn-info">
                                    <a href="/productos/listado_productos/{{id_productos}}" type=""
                                        title="add to cart">Detalle</a>
                                </div>
                            </div>
                        </figure>
                    </article>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>